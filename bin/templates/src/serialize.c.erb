#include "yarp.h"

static void
serialize_token(yp_parser_t *parser, yp_token_t *token, yp_buffer_t *buffer) {
  yp_buffer_append_u8(buffer, token->type);
  yp_buffer_append_u64(buffer, token->start - parser->input.start);
  yp_buffer_append_u64(buffer, token->end - parser->input.start);
}

void
yp_serialize_node(yp_parser_t *parser, yp_node_t *node, yp_buffer_t *buffer) {
  yp_buffer_append_u8(buffer, node->type);

  size_t offset = buffer->length;
  yp_buffer_append_u64(buffer, 0);

  yp_buffer_append_u64(buffer, node->location.start);
  yp_buffer_append_u64(buffer, node->location.end);

  switch (node->type) {
    <%- nodes.each do |node| -%>
    case <%= node.type %>: {
      <%- node.params.each do |param| -%>
      <%- case param -%>
      <%- when NodeParam -%>
      yp_serialize_node(parser, node->as.<%= node.human %>.<%= param.name %>, buffer);
      <%- when OptionalNodeParam -%>
      if (node->as.<%= node.human %>.<%= param.name %> == NULL) {
        yp_buffer_append_u8(buffer, 0);
      } else {
        yp_serialize_node(parser, node->as.<%= node.human %>.<%= param.name %>, buffer);
      }
      <%- when StringParam -%>
      uint64_t <%= param.name %>_length = yp_string_length(&node->as.<%= node.human %>.<%= param.name %>);
      yp_buffer_append_u64(buffer, <%= param.name %>_length);
      yp_buffer_append_str(buffer, yp_string_source(&node->as.<%= node.human %>.<%= param.name %>), <%= param.name %>_length);
      <%- when NodeListParam -%>
      uint64_t <%= param.name %>_size = node->as.<%= node.human %>.<%= param.name %>->size;
      yp_buffer_append_u64(buffer, <%= param.name %>_size);
      for (uint64_t index = 0; index < <%= param.name %>_size; index++) {
        yp_serialize_node(parser, node->as.<%= node.human %>.<%= param.name %>->nodes[index], buffer);
      }
      <%- when TokenParam -%>
      serialize_token(parser, &node->as.<%= node.human %>.<%= param.name %>, buffer);
      <%- when TokenListParam -%>
      uint64_t <%= param.name %>_size = node->as.<%= node.human %>.<%= param.name %>->size;
      yp_buffer_append_u64(buffer, <%= param.name %>_size);
      for (uint64_t index = 0; index < <%= param.name %>_size; index++) {
        serialize_token(parser, &node->as.<%= node.human %>.<%= param.name %>->tokens[index], buffer);
      }
      <%- else -%>
      <%- raise -%>
      <%- end -%>
      <%- end -%>
      break;
    }
    <%- end -%>
  }

  uint64_t length = buffer->length - offset - sizeof(uint64_t);
  memcpy(buffer->value + offset, &length, sizeof(uint64_t));
}
